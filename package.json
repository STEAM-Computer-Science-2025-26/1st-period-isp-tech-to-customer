{
	"name": "tech-to-customer",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "concurrently -k \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
		"dev:frontend": "next dev",
		"dev:backend": "tsx services/server.ts",
		"build": "pnpm run build:frontend && pnpm run build:backend",
		"build:frontend": "node -e \"const {execSync}=require('child_process');try{execSync('pnpm exec prettier . --check',{stdio:'inherit'});}catch(e){execSync('pnpm exec prettier . --write',{stdio:'inherit'});}execSync('pnpm exec next build',{stdio:'inherit'});\"",
		"build:backend": "tsc -p tsconfig.backend.json",
		"start": "next start",
		"format": "pnpm exec prettier . --write",
		"lint": "eslint . -f  ./eslint.formatter.js && pnpm exec prettier . --check",
		"lint:auto-format": "eslint . -f ./eslint.formatter.js --fix && node -e \"const {execSync}=require('child_process');try{execSync('pnpm exec prettier . --check',{stdio:'inherit'});}catch(e){execSync('pnpm exec prettier . --write',{stdio:'inherit'});}\"",
		"migrate:status": "node db/migrations/scripts/migrate.js status",
		"migrate:up": "node db/migrations/scripts/migrate.js up",
		"migrate:down": "node db/migrations/scripts/migrate.js down",
		"migrate:create": "node db/migrations/scripts/create-migration.js"
	},
	"dependencies": {
		"@fastify/cors": "^11.2.0",
		"@fastify/jwt": "^10.0.0",
		"@googlemaps/js-api-loader": "^2.0.2",
		"@neondatabase/serverless": "^1.0.2",
		"bcryptjs": "^3.0.3",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"date-fns": "^4.1.0",
		"dotenv": "^17.3.1",
		"express": "^5.2.1",
		"fastify": "^5.7.4",
		"fastify-raw-body": "^5.0.0",
		"intuit-oauth": "^4.2.2",
		"jsonwebtoken": "^9.0.3",
		"lucide-react": "^0.563.0",
		"next": "16.1.6",
		"node": "^25.6.1",
		"node-quickbooks": "^2.0.43",
		"pg": "^8.18.0",
		"pino": "^10.3.1",
		"pino-pretty": "^13.1.3",
		"prettier": "^3.8.1",
		"prom-client": "^15.1.3",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"regression": "^2.0.1",
		"stripe": "^20.3.1",
		"tailwind-merge": "^3.4.1",
		"undici": "^7.20.0",
		"ws": "^8.19.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^25.2.3",
		"@types/pg": "^8.16.0",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"@types/regression": "^2.0.6",
		"@types/ws": "^8.18.1",
		"eslint": "^10.0.1",
		"eslint-config-next": "^0.2.4",
		"jest": "^19.0.2",
		"node-pg-migrate": "^8.0.4",
		"tailwindcss": "^4.1.18",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
